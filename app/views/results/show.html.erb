<% content_for :title, "Détails du Résultat" %>

<div class="lol-container mb-6">
  <div class="lol-header p-3">
    <h1 class="text-2xl font-semibold text-center">Détails du Résultat</h1>
  </div>
  
  <div class="p-6">
    <!-- Informations du match -->
    <div class="mb-8">
      <div class="text-amber-500 font-medium text-center mb-4">
        <%= @match.date.strftime("%d %B %Y") %> - <%= @match.date.strftime("%H:%M") %>
      </div>
      
      <div class="flex flex-col md:flex-row justify-center items-center bg-black bg-opacity-40 p-6 rounded-lg border border-gray-700">
        <!-- Équipe 1 -->
        <div class="flex-1 text-center">
          <div class="text-xl font-bold mb-1"><%= @match.first_team.name %></div>
          <div class="text-5xl font-bold text-amber-400 my-4"><%= @result.first_team_score %></div>
          <div class="text-sm text-gray-400">
            <% @match.first_team.players.each do |player| %>
              <div class="mb-1"><%= player.first_name %> "<span class="text-amber-500"><%= player.formatted_role %></span>"<%= player.last_name %></div>
            <% end %>
          </div>
        </div>
        
        <!-- Élément central -->
        <div class="my-6 md:my-0 md:mx-8">
          <div class="text-4xl text-center font-bold text-gray-500 mb-2">VS</div>
          <% if @result.first_team_score > @result.second_team_score %>
            <div class="text-sm text-green-500 font-medium whitespace-nowrap">Victoire de <%= @match.first_team.name %></div>
          <% elsif @result.second_team_score > @result.first_team_score %>
            <div class="text-sm text-green-500 font-medium whitespace-nowrap">Victoire de <%= @match.second_team.name %></div>
          <% else %>
            <div class="text-sm text-yellow-500 font-medium">Match nul</div>
          <% end %>
        </div>
        
        <!-- Équipe 2 -->
        <div class="flex-1 text-center">
          <div class="text-xl font-bold mb-1"><%= @match.second_team.name %></div>
          <div class="text-5xl font-bold text-amber-400 my-4"><%= @result.second_team_score %></div>
          <div class="text-sm text-gray-400">
            <% @match.second_team.players.each do |player| %>
              <div class="mb-1"><%= player.first_name %> "<span class="text-amber-500"><%= player.formatted_role %></span>" <%= player.last_name %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Informations supplémentaires -->
    <div class="bg-black bg-opacity-40 p-4 rounded border border-gray-700 mb-6">
      <h2 class="text-amber-500 font-medium mb-2">Informations additionnelles</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-gray-400">Match ID: <span class="text-white"><%= @match.id %></span></p>
          <p class="text-gray-400">Résultat ID: <span class="text-white"><%= @result.id %></span></p>
        </div>
        <div>
          <p class="text-gray-400">Statut du match: <span class="text-green-500">Terminé</span></p>
          <p class="text-gray-400">Résultat enregistré le: <span class="text-white"><%= @result.created_at.strftime("%d/%m/%Y à %H:%M") %></span></p>
        </div>
      </div>
    </div>
    
    <!-- Actions -->
    <div class="flex flex-wrap justify-center gap-3 mt-8">
      <%= link_to results_path, class: "lol-btn" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Retour aux résultats
        </div>
      <% end %>

      <%= link_to edit_result_path(@result), class: "lol-btn lol-btn-primary" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifier ce résultat
        </div>
      <% end %>
      
       <%= link_to match_path(@match), class: "lol-btn inline-block" do %>
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
      Voir les détails du match
    </div>
  <% end %>
      
    
    </div>
  </div>
</div>