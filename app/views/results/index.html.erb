<% content_for :title, "Results" %>

<div class="lol-container">
  <div class="lol-header p-3">
    <h2 class="text-2xl font-semibold text-center">Résultats des Matchs</h2>
  </div>
  
  <div class="p-4">
    <% if @results.any? %>
      <div class="space-y-4">
        <% @results.each do |result| %>
          <div class="border border-gray-700 bg-black bg-opacity-40 rounded overflow-hidden mb-4">
            <div class="p-4">
              <div class="flex flex-col md:flex-row justify-between items-center">
                <!-- Détails du match -->
                <div class="flex-1 text-center md:text-left mb-4 md:mb-0">
                  <div class="text-amber-500 font-medium mb-2">
                    <%= result.match.date.strftime("%d %b %Y") %> - <%= result.match.date.strftime("%H:%M") %>
                  </div>
                  
                  <div class="flex flex-col md:flex-row justify-center md:justify-start items-center md:space-x-6">
                    <!-- Équipe 1 -->
                    <div class="flex flex-col items-center md:items-start">
                      <div class="text-lg font-bold"><%= result.match.first_team.name %></div>
                      <div class="text-3xl font-bold text-amber-400 mt-1"><%= result.first_team_score %></div>
                    </div>
                    
                    <!-- Séparateur -->
                    <div class="my-2 md:my-0 text-2xl">VS</div>
                    
                    <!-- Équipe 2 -->
                    <div class="flex flex-col items-center md:items-start">
                      <div class="text-lg font-bold"><%= result.match.second_team.name %></div>
                      <div class="text-3xl font-bold text-amber-400 mt-1"><%= result.second_team_score %></div>
                    </div>
                  </div>
                  
                  <!-- Affichage du gagnant -->
                  <div class="mt-3 text-center md:text-left">
                    <% if result.first_team_score > result.second_team_score %>
                      <span class="text-green-500 font-medium">Victoire de <%= result.match.first_team.name %></span>
                    <% elsif result.second_team_score > result.first_team_score %>
                      <span class="text-green-500 font-medium">Victoire de <%= result.match.second_team.name %></span>
                    <% else %>
                      <span class="text-yellow-500 font-medium">Match nul</span>
                    <% end %>
                  </div>
                </div>
                
                <!-- Actions -->
                <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-2">
                  <%= link_to result_path(result), class: "lol-btn text-center" do %>
                    <div class="flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      Détails
                    </div>
                  <% end %>
                  
                  <%= link_to edit_result_path(result), class: "lol-btn text-center" do %>
                    <div class="flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                      Modifier
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination (si nécessaire) -->
      <% if @results.respond_to?(:total_pages) %>
        <div class="mt-6 flex justify-center">
          <nav class="inline-flex">
            <% if @results.total_pages > 1 %>
              <% (1..@results.total_pages).each do |page| %>
                <% if page == @results.current_page %>
                  <span class="px-3 py-1 bg-amber-700 text-white font-medium"><%= page %></span>
                <% else %>
                  <%= link_to page, { page: page }, class: "px-3 py-1 bg-black bg-opacity-30 border border-gray-700 text-amber-500 hover:bg-black hover:bg-opacity-50" %>
                <% end %>
              <% end %>
            <% end %>
          </nav>
        </div>
      <% end %>
      
    <% else %>
      <div class="py-12 text-center">
        <p class="text-gray-400 text-lg">Aucun résultat enregistré pour le moment.</p>
      </div>
    <% end %>
  </div>
</div>