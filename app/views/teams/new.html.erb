<% content_for :title, "Nouvelle équipe" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="lol-container mb-8">
    <div class="lol-header p-3 relative">
      <!-- Titre centré -->
      <h2 class="text-xl font-semibold text-center">Créer une nouvelle équipe</h2>
      
      <!-- Bouton retour positionné de manière absolue -->
      <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
        <%= link_to teams_path, class: "lol-btn py-2 px-3 text-sm flex items-center justify-center" do %>
          <svg class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Retour
        <% end %>
      </div>
    </div>
    
    <div class="p-6">
      <%= render "form", team: @team %>
    </div>
  </div>
</div>