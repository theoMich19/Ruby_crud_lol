<% content_for :title, "Teams" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Liste des équipes -->
    <div class="lol-container p-6 mb-8">
        <div class="lol-header p-3 mb-4">
            <h2 class="text-xl font-semibold text-center">Liste des équipes</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @teams.each do |team| %>
            <div class="lol-container p-4">
                <div class="flex items-center justify-between mb-3">
                    <h3 class="text-xl font-semibold"><%= team.name %></h3>
                    <div class="flex space-x-2">
                        <%= link_to "Voir", team, class: "lol-btn" %>
                        <%= link_to "Modifier", edit_team_path(team), class: "lol-btn" %>
                    </div>
                </div>
                <div class="text-sm text-gray-300">
                    <%= pluralize(team.players.count, "joueur") %>
                </div>
            </div>
            <% end %>
        </div>
    </div>

    <!-- Bouton d'action -->
    <div class="text-center mb-8">
        <%= link_to new_team_path, class: "lol-btn lol-btn-primary inline-block" do %>
        <div class="flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nouvelle équipe
        </div>
        <% end %>
    </div>
</div>