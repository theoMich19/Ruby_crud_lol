<% content_for :title, "Détails du joueur" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lol-container p-6 mb-8">
        <div class="lol-header p-3 mb-4">
            <h2 class="text-xl font-semibold text-center">Informations du joueur</h2>
        </div>

        <div class="lol-container p-4">
            <%= render @player %>
        </div>

        <div class="flex flex-wrap justify-center gap-4 mt-6">
            <%= link_to "Modifier ce joueur", edit_player_path(@player), class: "lol-btn" %>
            <%= link_to "Retour aux joueurs", players_path, class: "lol-btn" %>
            <%= button_to "Supprimer ce joueur", @player, method: :delete, class: "lol-btn bg-red-600 hover:bg-red-500", data: { turbo_confirm: "Êtes-vous sûr ?" } %>
        </div>
    </div>
</div>