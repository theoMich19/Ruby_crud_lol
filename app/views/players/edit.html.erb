<% content_for :title, "Editing player" %>

<div class="md:w-2/3 w-full">
    <%= render "form", player: @player %>

    <div class="flex justify-between mt-6">
        <%= link_to "Voir détails", @player, class: "lol-btn" %>
        <%= link_to "Retour aux joueurs", players_path, class: "lol-btn" %>
        <%= button_to "Supprimer ce joueur", @player, method: :delete, class: "lol-btn bg-red-600 hover:bg-red-500 px-6 py-2", data: { turbo_confirm: "Êtes-vous sûr ?" } %>
    </div>
</div>