<% content_for :title, "Modifier le joueur" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="lol-container mb-8">
    <div class="lol-header p-3 relative">
      <!-- Titre centré -->
      <h2 class="text-xl font-semibold text-center">Modifier le joueur <%= @player.first_name %> <%= @player.last_name %></h2>
      
      <!-- Bouton retour positionné de manière absolue -->
      <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
        <%= link_to @player, class: "lol-btn py-2 px-3 text-sm flex items-center justify-center" do %>
          <svg class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Retour
        <% end %>
      </div>
    </div>
    
    <div class="p-6">
      <!-- Section d'information -->
      <div class="bg-[#091428] bg-opacity-70 border border-[#3c3c41] rounded-md p-4 mb-6">
        <div class="flex items-center text-[#c8aa6e]">
          <svg class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <path d="M12 16v-4M12 8h.01" />
          </svg>
          <span class="text-sm">
            Modifiez les informations du joueur. 
            <% if @player.team.present? %>
              Ce joueur fait partie de l'équipe <%= @player.team.name %>.
            <% else %>
              Ce joueur n'est actuellement assigné à aucune équipe.
            <% end %>
          </span>
        </div>
      </div>
      
      <%= render "form", player: @player %>
      
      <div class="mt-8 pt-6">
        <div class="flex flex-col md:flex-row gap-4 justify-center">
          <!-- Bouton voir détails -->
          <%= link_to @player, class: "lol-btn py-3 px-6 flex items-center justify-center group transition-all duration-300" do %>
            <svg class="h-5 w-5 mr-2 text-[#c8aa6e] group-hover:text-[#f0e6d2]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10" />
              <circle cx="12" cy="12" r="3" />
            </svg>
            <span>Voir détails du joueur</span>
          <% end %>
          
          <!-- Bouton supprimer -->
          <%= button_to @player, 
              method: :delete, 
              class: "lol-btn bg-[#3a1518] hover:bg-[#5e2129] border-[#5e2129] py-3 px-6 flex items-center justify-center group transition-all duration-300", 
              form: { 
                data: { 
                  turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce joueur ? Cette action est irréversible." 
                } 
              } do %>
            <svg class="h-5 w-5 mr-2 text-[#e84057] group-hover:text-[#ff6b81]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2M10 11v6M14 11v6" />
            </svg>
            <span>Supprimer ce joueur</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>