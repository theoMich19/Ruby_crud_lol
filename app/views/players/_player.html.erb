<%= form_with(model: player, class: "contents") do |form| %>
<% if player.errors.any? %>
<div id="error_explanation" class="lol-alert-danger px-4 py-3 rounded-md mb-6">
    <h2 class="font-bold text-lg mb-2"><%= pluralize(player.errors.count, "erreur") %> :</h2>
    <ul class="list-disc ml-6">
        <% player.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Prénom -->
    <div>
        <strong class="block text-lg font-medium mb-2">Prénom:</strong>
        <div class="block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2]">
            <%= player.first_name %>
        </div>
    </div>

    <!-- Nom -->
    <div>
        <strong class="block text-lg font-medium mb-2">Nom:</strong>
        <div class="block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2]">
            <%= player.last_name %>
        </div>
    </div>
</div>

<!-- Rôle -->
<div class="mb-6">
    <strong class="block text-lg font-medium mb-2">Rôle:</strong>
    <div class="block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2]">
        <%= player.formatted_role %>
    </div>
</div>

<!-- Équipe -->
<div class="mb-6">
    <strong class="block text-lg font-medium mb-2">Équipe:</strong>
    <div class="block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2]">
        <% if player.team.present? %>
        <%= link_to player.team.name, team_path(player.team), class: "hover:text-[#c8aa6e] transition-colors" %>
        <% else %>
        Aucune équipe
        <% end %>
    </div>
</div>
<% end %>