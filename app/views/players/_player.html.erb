<%= form_with(model: player, class: "contents") do |form| %>
<% if player.errors.any? %>
<div id="error_explanation" class="lol-alert-danger px-4 py-3 rounded-md mb-6">
    <h2 class="font-bold text-lg mb-2"><%= pluralize(player.errors.count, "erreur") %> :</h2>
    <ul class="list-disc ml-6">
        <% player.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Prénom -->
    <div>
        <%= form.label :first_name, "Prénom", class: "block text-lg font-medium mb-2" %>
        <%= form.text_field :first_name, 
            class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2] focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20",
            placeholder: "Prénom du joueur" %>
    </div>

    <!-- Nom -->
    <div>
        <%= form.label :last_name, "Nom", class: "block text-lg font-medium mb-2" %>
        <%= form.text_field :last_name, 
            class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2] focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20",
            placeholder: "Nom du joueur" %>
    </div>
</div>

<!-- Rôle -->
<div class="mb-6">
    <%= form.label :role, "Rôle", class: "block text-lg font-medium mb-2" %>
    <div class="relative">
        <%= form.select :role, 
            [
                ["Sélectionner un rôle", ""], 
                ["Top laner", "Top laner"], 
                ["Jungler", "Jungler"], 
                ["Mid laner", "Mid laner"], 
                ["ADC", "ADC"], 
                ["Support", "Support"]
            ],
            {},
            class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2] appearance-none focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20" %>
        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="h-5 w-5 text-[#c8aa6e]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </div>
    </div>
</div>

<!-- Équipe -->
<div class="mb-6">
    <%= form.label :team_id, "Équipe", class: "block text-lg font-medium mb-2" %>
    <div class="relative">
        <%= form.collection_select :team_id, 
            Team.all, 
            :id, 
            :name,
            { include_blank: 'Sélectionner une équipe (optionnel)' }, 
            class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md px-4 py-3 text-[#f0e6d2] appearance-none focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20" %>
        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="h-5 w-5 text-[#c8aa6e]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </div>
    </div>
</div>

<!-- Bouton de soumission -->
<div class="mt-8">
    <%= form.submit player.new_record? ? "Créer le joueur" : "Modifier le joueur", class: "lol-btn lol-btn-primary py-3 px-6 w-full md:w-auto text-lg" %>
</div>
<% end %>