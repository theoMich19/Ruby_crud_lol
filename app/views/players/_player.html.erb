<div id="<%= dom_id player %>" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="lol-container p-4">
            <h4 class="text-lg font-semibold text-gray-100 mb-3">Informations personnelles</h4>
            <div class="space-y-3">
                <div>
                    <p class="text-sm text-gray-400">Nom</p>
                    <p class="text-gray-100"><%= player.last_name %></p>
                </div>
                <div>
                    <p class="text-sm text-gray-400">Prénom</p>
                    <p class="text-gray-100"><%= player.first_name %></p>
                </div>
            </div>
        </div>

        <div class="lol-container p-4">
            <h4 class="text-lg font-semibold text-gray-100 mb-3">Informations de jeu</h4>
            <div class="space-y-3">
                <div>
                    <p class="text-sm text-gray-400">Rôle</p>
                    <p class="text-gray-100"><%= player.formatted_role %></p>
                </div>
                <div>
                    <p class="text-sm text-gray-400">Équipe</p>
                    <% if player.team %>
                    <%= link_to player.team.name, player.team, class: "text-gray-100 hover:text-c8aa6e transition-colors" %>
                    <% else %>
                    <p class="text-gray-100">Aucune équipe</p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>