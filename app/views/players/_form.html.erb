<%= form_with(model: player, class: "contents") do |form| %>
<% if player.errors.any? %>
<div id="error_explanation" class="lol-container p-4 mb-4 bg-red-600/10 text-red-500">
    <h2 class="font-semibold mb-2"><%= pluralize(player.errors.count, "erreur") %> a empêché ce joueur d'être sauvegardé :</h2>
    <ul class="list-disc ml-6">
        <% player.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="lol-container p-6">
    <div class="lol-header p-3 mb-4">
        <h2 class="text-xl font-semibold text-center">
            <%= player.new_record? ? "Nouveau joueur" : "Modifier le joueur" %>
        </h2>
    </div>

    <div class="space-y-6">
        <div>
            <%= form.label :last_name, "Nom", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.text_field :last_name, 
                    class: "block w-full rounded-md border border-gray-700 bg-gray-900 text-white px-3 py-2 focus:outline-none focus:ring-2 focus:ring-c8aa6e focus:border-transparent",
                    placeholder: "Entrez le nom du joueur" %>
        </div>

        <div>
            <%= form.label :first_name, "Prénom", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.text_field :first_name, 
                    class: "block w-full rounded-md border border-gray-700 bg-gray-900 text-white px-3 py-2 focus:outline-none focus:ring-2 focus:ring-c8aa6e focus:border-transparent",
                    placeholder: "Entrez le prénom du joueur" %>
        </div>

        <div>
            <%= form.label :role, "Rôle", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.select :role, 
                    [['Non défini', '']] + Player.roles.keys.map { |role| [role.humanize, role] }, 
                    {}, 
                    class: "block w-full rounded-md border border-gray-700 bg-gray-900 text-white px-3 py-2 focus:outline-none focus:ring-2 focus:ring-c8aa6e focus:border-transparent" %>
        </div>

        <div>
            <%= form.label :team_id, "Équipe", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.select :team_id, 
                    [['Aucune équipe', '']] + team_options_for_select,
                    {}, 
                    class: "block w-full rounded-md border border-gray-700 bg-gray-900 text-white px-3 py-2 focus:outline-none focus:ring-2 focus:ring-c8aa6e focus:border-transparent" %>
        </div>

        <div class="flex justify-center">
            <%= form.submit class: "lol-btn lol-btn-primary px-6 py-2" %>
        </div>
    </div>
</div>
<% end %>