<%= form_with(model: player, class: "contents") do |form| %>
<% if player.errors.any? %>
<div id="error_explanation" class="lol-alert-danger px-4 py-3 rounded-md mb-6">
    <div class="flex items-start">
        <svg class="h-6 w-6 text-red-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
            <h2 class="font-bold text-lg mb-2"><%= pluralize(player.errors.count, "erreur") %> :</h2>
            <ul class="list-disc ml-6">
                <% player.errors.each do |error| %>
                <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
<% end %>

<!-- Informations personnelles -->
<div class="bg-[#091428] bg-opacity-70 border border-[#3c3c41] rounded-md p-5 mb-6">
    <h3 class="text-lg font-semibold text-[#c8aa6e] mb-4 pb-2 border-b border-[#3c3c41] flex items-center">
        <svg class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Informations personnelles
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Prénom -->
        <div>
            <%= form.label :first_name, "Prénom", class: "block text-sm font-medium text-[#c8aa6e] mb-2" %>
            <div class="relative">
                <%= form.text_field :first_name, 
                class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md pl-10 pr-4 py-3 text-[#f0e6d2] focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20",
                placeholder: "Prénom du joueur" %>
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" />
                    </svg>
                </div>
            </div>
            <p class="text-xs text-gray-400 mt-1 pl-2">Obligatoire</p>
        </div>

        <!-- Nom -->
        <div>
            <%= form.label :last_name, "Nom", class: "block text-sm font-medium text-[#c8aa6e] mb-2" %>
            <div class="relative">
                <%= form.text_field :last_name, 
                class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md pl-10 pr-4 py-3 text-[#f0e6d2] focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20",
                placeholder: "Nom du joueur" %>
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" />
                    </svg>
                </div>
            </div>
            <p class="text-xs text-gray-400 mt-1 pl-2">Obligatoire</p>
        </div>
    </div>
</div>

<!-- Informations de jeu -->
<div class="bg-[#091428] bg-opacity-70 border border-[#3c3c41] rounded-md p-5 mb-6">
    <h3 class="text-lg font-semibold text-[#c8aa6e] mb-4 pb-2 border-b border-[#3c3c41] flex items-center">
        <svg class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="11 5 6 9 2 6 2 13 6 16 11 12 11 19 11 12 16 16 20 13 20 6 16 9 11 5" />
        </svg>
        Informations de jeu
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Rôle -->
        <div>
            <%= form.label :role, "Rôle", class: "block text-sm font-medium text-[#c8aa6e] mb-2" %>
            <div class="relative">
                <%= form.select :role, 
                [
                  ["Sélectionner un rôle", ""], 
                  ["Top laner", "Top laner"], 
                  ["Jungler", "Jungler"], 
                  ["Mid laner", "Mid laner"], 
                  ["ADC", "ADC"], 
                  ["Support", "Support"]
                ],
                {},
                class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md pl-10 pr-10 py-3 text-[#f0e6d2] appearance-none focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20" %>
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                </div>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                    <svg class="h-5 w-5 text-[#c8aa6e]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
            <p class="text-xs text-gray-400 mt-1 pl-2">Choisissez le rôle principal du joueur</p>
        </div>

        <!-- Équipe -->
        <div>
            <%= form.label :team_id, "Équipe", class: "block text-sm font-medium text-[#c8aa6e] mb-2" %>
            <div class="relative">
                <%= form.collection_select :team_id, 
                Team.all, 
                :id, 
                :name,
                { include_blank: 'Sélectionner une équipe (optionnel)' }, 
                class: "block w-full bg-[#1e2328] border border-[#3c3c41] rounded-md pl-10 pr-10 py-3 text-[#f0e6d2] appearance-none focus:outline-none focus:border-[#c8aa6e] focus:ring focus:ring-[#c8aa6e] focus:ring-opacity-20" %>
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="9" r="4" />
                        <circle cx="15" cy="15" r="4" />
                    </svg>
                </div>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                    <svg class="h-5 w-5 text-[#c8aa6e]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
            <p class="text-xs text-gray-400 mt-1 pl-2">Une équipe ne peut pas avoir plus de 5 joueurs</p>
        </div>
    </div>
</div>

<!-- Bouton de soumission avec effet de hover amélioré -->
<div class="flex flex-wrap justify-center gap-4 md:justify-between">
    <button type="submit" class="lol-btn lol-btn-primary py-3 px-6 w-full md:w-auto text-lg group transition-all duration-300 relative overflow-hidden">
        <div class="relative z-10 flex items-center justify-center">
            <svg class="h-5 w-5 mr-2 transition-transform duration-300 group-hover:rotate-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                <path d="M12 4v16m8-8H4" />
            </svg>
            <%= player.new_record? ? "Créer le joueur" : "Modifier le joueur" %>
        </div>
        <div class="absolute inset-0 bg-[#c8aa6e] opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
    </button>

</div>
<% end %>